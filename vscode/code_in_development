Dim choseOption As SearchOption
Dim reporter As New clsReporter

Enum SearchOption
    ByName = 1
    ByCode = 2
    NotSelected = 3
End Enum

Private Sub btnQuit_Click()
    Me.Hide
End Sub

Private Sub SearchRecordsByName()

    Dim arrayList As Object: Set arrayList = CreateObject("System.Collections.ArrayList")

    Dim lastIndex As Integer : lastIndex = utilities.GetLastIndexWithData
    

End Sub

Private Sub btnSearch_Click()
    
    Select Case choseOption
        Case SearchOption.ByName
            SearchRecordsByName
        Case SearchOption.ByCode
        
        Case SearchOption.NotSelected
            reporter.ReportSearchOptionNotSelected
    End Select
     
End Sub

Private Sub obSearchByName_Click()
    If obSearchByName.value = True Then
        choseOption = SearchOption.ByName
    End If
End Sub

Private Sub obSearchByCode_Click()
    If obSearchByCode.value = True Then
        choseOption = SearchOption.ByCode
    End If
End Sub

Private Sub UserForm_Initialize()
    choseOption = SearchOption.NotSelected
End Sub

